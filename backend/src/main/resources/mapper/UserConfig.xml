<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jngyen.bookkeeping.backend.mapper.UserConfigMapper">

    <resultMap type="com.jngyen.bookkeeping.backend.pojo.po.user.UserConfigPO" id="BaseResultMap">
        <id column="id" property="id" />
        <result column="user_uuid" property="uuid" />
        <result column="home_currency" property="baseCurrency" />
        <result column="home_currency_color" property="baseCurrencyColor" />
        <result column="is_use_custom_rate" property="isUseCustomRate" />
        <result column="is_use_custom_data" property="isUseCustomData" /> <!-- 新增映射 -->
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <sql id="Base_Column_List">
        id, user_uuid, home_currency, home_currency_color, is_use_custom_rate, is_use_custom_data, gmt_create, gmt_modified
    </sql>

    <!-- 获取用户配置信息 -->
    <select id="getUserConfigByUuid" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM user_config
        WHERE user_uuid = #{uuid}
    </select>

    <!-- 插入初始化时的用户配置信息 -->
    <insert id="insertUserConfig" parameterType="com.jngyen.bookkeeping.backend.pojo.po.user.UserConfigPO">
        INSERT INTO user_config (id, user_uuid, home_currency, home_currency_color, is_use_custom_rate, is_use_custom_data, gmt_create, gmt_modified)
        VALUES (#{id}, #{uuid}, #{baseCurrency}, #{baseCurrencyColor}, #{isUseCustomRate}, #{isUseCustomData}, NOW(), NOW())
    </insert>

    <!-- 更新用户本币信息 -->
    <update id="updateUserBaseCurrency" parameterType="com.jngyen.bookkeeping.backend.pojo.po.user.UserConfigPO">
        UPDATE user_config
        SET home_currency = #{baseCurrency}, 
            home_currency_color = #{baseCurrencyColor}, 
            gmt_modified = NOW()
        WHERE user_uuid = #{uuid}
    </update>

    <!-- 更新用户是否使用自定义汇率信息 -->
    <update id="updateUserIsUseCustomRate" parameterType="com.jngyen.bookkeeping.backend.pojo.po.user.UserConfigPO">
        UPDATE user_config
        SET is_use_custom_rate = #{isUseCustomRate}, 
            gmt_modified = NOW()
        WHERE user_uuid = #{uuid}
    </update>

    <!-- 更新用户是否使用自定义数据 -->
    <update id="updateUserIsUseCustomData" parameterType="com.jngyen.bookkeeping.backend.pojo.po.user.UserConfigPO">
        UPDATE user_config
        SET is_use_custom_data = #{isUseCustomData}, 
            gmt_modified = NOW()
        WHERE user_uuid = #{uuid}
    </update>

    <!-- 删除用户配置信息 -->
    <delete id="deleteUserConfigByUuid" parameterType="java.lang.String">
        DELETE FROM user_config
        WHERE user_uuid = #{uuid}    
    </delete>

</mapper>

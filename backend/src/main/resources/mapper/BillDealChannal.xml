<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jngyen.bookkeeping.backend.mapper.BillDealChannalMapper">
    <resultMap id="BillDealChannalMap" type="com.jngyen.bookkeeping.backend.pojo.po.bill.BillDealChannalPO">
        <result property="id" column="id"/>
        <result property="dealChannal" column="deal_channal"/>
        <result property="userUuid" column="user_uuid"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>
    
    <!-- Get all deal channels for a user -->
    <select id="getAllChannalsByUser" resultMap="BillDealChannalMap">
        SELECT * FROM bill_deal_channal WHERE user_uuid = #{userUuid}
    </select>

    <!-- Check if a specific deal channel exists for a user -->
    <select id="checkChannalExists" resultType="int">
        SELECT COUNT(1) FROM bill_deal_channal 
        WHERE user_uuid = #{userUuid} AND deal_channal = #{dealChannal}
    </select>

    <!-- Add a new deal channel -->
    <insert id="insertDealChannal" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO bill_deal_channal (deal_channal, user_uuid, gmt_create, gmt_modified)
        VALUES (#{dealChannal}, #{userUuid}, NOW(), NOW())
    </insert>

    <!-- 重命名channel名 -->
    <update id="updateDealChannal">
        UPDATE bill_deal_channal
        SET deal_channal = #{newDealChannal},
            gmt_modified = NOW()
        WHERE user_uuid = #{userUuid} AND deal_channal = #{dealChannal}
    </update>
    <!-- Delete a specific deal channel -->
    <delete id="deleteDealChannal">
        DELETE FROM bill_deal_channal 
        WHERE user_uuid = #{userUuid} AND deal_channal = #{dealChannal}
    </delete>

</mapper>
